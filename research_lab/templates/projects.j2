{% extends 'base.j2' %}
{% set title = 'Projects' %}

{% block main %}
<h1>{{ title }}</h1>
<h2>Active</h2>
<table>
    <tr>
        <th>Project ID</th>
        <th>Name</th>
        <th>Details</th>
    </tr>
    {% for proj in active %}
    <tr>
        <td>{{ proj.project_id }}</td>
        <td>{{ proj.project_name }}</td>
        <td><a href="/projects/{{ proj.project_id }}/">Link</a></td>
    </tr>
    {% endfor %}
</table>
<h2>Inactive</h2>
<table>
    <tr>
        <th>Project ID</th>
        <th>Name</th>
        <th>Details</th>
    </tr>
    {% for proj in inactive %}
    <tr>
        <td>{{ proj.project_id }}</td>
        <td>{{ proj.project_name }}</td>
        <td><a href="/projects/{{ proj.project_id }}/">Link</a></td>
    </tr>
    {% endfor %}
</table>
{% endblock %}