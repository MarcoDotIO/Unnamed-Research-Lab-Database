{% extends 'base.j2' %}
{% set title = 'Items' %}

{% block main %}
<h1>{{ title }}</h1>
<h2>My Checkouts</h2>
<table>
    <tr>
        <th>Item ID</th>
        <th>Item Name</th>
        <th>Home Space</th>
        <th></th>
    </tr>
    {% for item in checkouts %}
    <tr>
        <td>{{ item.item_id }}</td>
        <td>{{ item.item_name }}</td>
        <td>{{ item.space_name }}</td>
        <td><a href="/items/{{ item.item_id }}/return/">Mark Returned</a></td>
    </tr>
    {% endfor %}
</table>
<h2>All Items</h2>
<form method="get" class="small">
    <input type="text" name="q" placeholder="query">
    <input type="submit" value="Search">
</form>
<table>
    <tr>
        <th>Item ID</th>
        <th>Item Name</th>
        <th>Home Space</th>
        <th>Status</th>
    </tr>
    {% for item in items %}
    <tr>
        <td>{{ item.item_id }}</td>
        <td>{{ item.item_name }}</td>
        <td>{{ item.space_name }}</td>
        {% if item.loanable and item.checkout_id != None %}
        <td>Loanable - Not Available</td>
        {% elif item.loanable %}
        <td>Loanable - <a href="/items/{{ item.item_id }}/checkout/">Available</a></td>
        {% else %}
        <td>Not Loanable</td>
        {% endif %}
    </tr>
    {% endfor %}
</table>
{% endblock %}